from aoc import lines

let x, c, s, beam = 1, 1, 0, 0

def draw(c):
    print('â–ˆ' if beam  >= x - 1 and beam  <= x + 1 else ' ', end='')
    if beam + 1 == 40: print()

    beam = (beam + 1) % 40
    if c == 20 or (c - 20) % 40 == 0:
        s += x * c

for line in lines:
    let op = line.split()[0]
    draw(c)
    c += 1
    if op == 'addx':
        draw(c)
        c += 1
        x = x + int(line.split()[1])

print(s)
